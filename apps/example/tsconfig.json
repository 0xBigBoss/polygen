{
  "extends": "@callstack/polygen-typescript-config",
  "include": ["src", "types"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "jsx": "react-native",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["@callstack/polygen-metro-config", "@callstack/polygen"]
  }
}
